              <li><a href="/search">Advanced Search</a></li>
              {% if shop.customer_accounts_enabled %}
              {% if customer %}
                <li><a href="/account">{{ customer.name }}</a></li>
                <li>{{ 'Logout' | customer_logout_link }}</li>
              {% else%}
                <li>
                   {{ 'Create an Account' | customer_register_link }} 
