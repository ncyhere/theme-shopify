 <div class="container cat_navbar clearfix">
        <div class="navbar_bg clearfix">
<ul class="sf-menu sf-js-enabled sf-shadow">
             {% for link in linklists.[settings.product-menu].links %}
    			{% if linklists[link.handle] == empty %}
                <li {% if settings.display_collection_dropdown and link.type == 'collection_link' and link.object.tags.size > 0 %} class="dropdown"{% endif %}{% if settings.display_blog_dropdown and link.type == 'blog_link' and link.object.articles.size > 0 %} class="dropdown"{% endif %}>
                  <a href="{{ link.url }}" class="{% if link.active %} current{% endif %}{% if settings.use_cufon_on_navigation %} cufon{% endif %}"><span>{{ link.title }}</span></a>
                  {% if settings.display_collection_dropdown and link.type == 'collection_link' and link.object.tags.size > 0 %}
                  <ul class="dropdown">
                    {% for tag in link.object.tags %}
                    <li><a href="{{ link.url }}/{{ tag | handle }}">{{ tag }}</a></li>
                    {% endfor %}
                  </ul>
                  {% endif %}
                  {% if settings.display_blog_dropdown and link.type == 'blog_link' and link.object.articles.size > 0 %}
                  <ul class="dropdown">
                    {% for article in link.object.articles %}
                    <li><a href="{{ article.url }}">{{ article.title }}</a></li>
                    {% endfor %}
                  </ul>
                  {% endif %}
                </li>
                {% else %}
            <li class="dropdown" style="position:relative"><a href="{{ link.url }}" class="{% if link.active %} current{% endif %}{% if settings.use_cufon_on_navigation %} cufon{% endif %}"><span>{{ link.title }}</span></a>
              <ul class="dropdown" style="position:absolute;display:none" >
                    {% for l in linklists[link.handle].links %}
                    	{% if linklists[l.handle] == empty %}
                		 <li {% if settings.display_collection_dropdown and l.type == 'collection_link' and l.object.tags.size > 0 %} class="dropdown"{% endif %}{% if settings.display_blog_dropdown and l.type == 'blog_link' and l.object.articles.size > 0 %} class="dropdown"{% endif %} >
                            <a href="{{ l.url }}" class="{% if l.active %} current{% endif %}{% if settings.use_cufon_on_navigation %} cufon{% endif %}"><span>{{ l.title }}</span></a>
                            {% if settings.display_collection_dropdown and l.type == 'collection_link' and l.object.tags.size > 0 %}
                            <ul class="dropdown">
                              {% for tag in l.object.tags %}
                              <li><a href="{{ l.url }}/{{ tag | handle }}">{{ tag }}</a></li>
                              {% endfor %}
                            </ul>
                            {% endif %}
                            {% if settings.display_blog_dropdown and l.type == 'blog_link' and l.object.articles.size > 0 %}
                            <ul class="dropdown">
                              {% for article in l.object.articles %}
                              <li><a href="{{ article.url }}">{{ article.title }}</a></li>
                              {% endfor %}
                            </ul>
                            {% endif %}
                          </li>
                		{% else %}
                			 <li class="dropdown" style="position:relative"><a href="{{ l.url }}" class="{% if l.active %} current{% endif %}{% if settings.use_cufon_on_navigation %} cufon{% endif %}"><span>{{ l.title }}</span></a>
                               <ul class="dropdown" style="position:absolute;display:none" >
                                 {% for t in linklists[l.handle].links %}
                                 <li><a href="{{ t.url }}"{% if t.active %} class="current"{% endif %}>{{ t.title }}</a></li>
                                 {% endfor %}
                               </ul>
               				 </li>
                		{% endif %}
                	{% endfor %}
                  </ul>
                </li>
                {% endif %}
 			{% endfor %}
          </ul>
          </div>
      </div>